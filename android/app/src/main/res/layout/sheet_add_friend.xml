<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_sheet"
    android:orientation="vertical"
    android:padding="16dp">

    <View
        android:layout_width="36dp"
        android:layout_height="4dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/bg_sheet_handle" />

    <TextView
        android:id="@+id/addFriendTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/add_friend_title"
        android:textColor="@color/text_primary_dark"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/addFriendSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="@string/add_friend_subtitle"
        android:textColor="@color/text_secondary_dark"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/addFriendQueryInput"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/bg_search_dark"
        android:hint="@string/add_friend_query_hint"
        android:inputType="textEmailAddress"
        android:paddingHorizontal="16dp"
        android:singleLine="true"
        android:textColor="@color/text_primary_dark"
        android:textColorHint="@color/text_muted_dark" />

    <Button
        android:id="@+id/addFriendFindButton"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/bg_button_secondary"
        android:text="@string/add_friend_find_button"
        android:textAllCaps="false"
        android:textColor="@color/button_secondary_text"
        android:textSize="14sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/addFriendResultCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:background="@drawable/bg_dark_card"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="12dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/addFriendResultInitial"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/bg_avatar_circle"
            android:backgroundTint="@color/accent_blue"
            android:gravity="center"
            android:text="?"
            android:textColor="@color/text_primary_dark"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/addFriendResultName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/text_primary_dark"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/addFriendResultUsername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text=""
                android:textColor="@color/text_secondary_dark"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/addFriendSendButton"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/bg_button_primary"
        android:text="@string/add_friend_send_button"
        android:textAllCaps="false"
        android:textColor="@color/button_primary_text"
        android:textSize="14sp"
        android:textStyle="bold"
        android:visibility="gone" />

    <TextView
        android:id="@+id/addFriendStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text=""
        android:textColor="@color/accent_blue"
        android:textSize="12sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/addFriendError"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text=""
        android:textColor="@android:color/holo_red_light"
        android:textSize="12sp"
        android:visibility="gone" />
</LinearLayout>
